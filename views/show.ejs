<% layout('./layouts/boilerplate') %>


  <div class="row">

    <div class="col-6">

      <div class="card">
        <img src="<%= campground.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.title %>
          </h5>
          <p class="card-text">
            <%= campground.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= campground.location %>
          </li>
          <li class="list-group-item">
            $<%= campground.price %>
          </li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds/<%= campground._id %>/edit" class="card-link"><button type="submit"
              class="btn btn-secondary">Edit</button></a>
          <form class="d-inline" action="/campground/<%=campground._id%>?_method=delete" method="post">
            <button type="submit" class="btn btn-danger">Delete</button></a>
          </form>
        </div>
      </div>

    </div>

    <div class="col-6">
      <h1 class="mt-3">Leave a Review</h1>
      <form class="mb-3 validated-form" action="/campground/<%= campground._id %>/review" method="post" novalidate>
        <div class="mb-3">
          <label for="customRange3" class="form-label">Rating</label>
          <input type="range" class="form-range" min="0" max="5" step="0.5" id="customRange3" name="rating">
        </div>
        <div class="mb-3">
          <label class="form-label" for="review">Review</label>
          <textarea class="form-control" name="review" id="review" cols="30" rows="3" required></textarea>
          <div class="valid-feedback">
            Looks Good!
          </div>
        </div>
        <button class="btn btn-success">Submit Review</button>
      </form>
      <div>
        <h1>Current Reviews</h1>
        <% if(campground.reviews) { for(review of campground.reviews) { %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="card-title">
                <h6>Rating: <%= review.rating %>
                </h6>
              </div>
              <div class="card-text">
                <p> Review: <%= review.review %>
                </p>
              </div>
            </div>
          </div>
          <% }} %>
      </div>
    </div>


  </div>