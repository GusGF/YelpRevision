<%- layout('/layouts/boilerplate') %>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="alert alert-danger text-break" role="alert">
        <h4 class="alert-heading">Error occured!!</h4>
        <p>
          <%= err.message %>
        </p>
        <p>
          Error Code: <%= err.status %>
        </p>
        <hr>
        <p class="mb-0">
          <%= err.stack %>
        </p>
      </div>
    </div>
  </div>